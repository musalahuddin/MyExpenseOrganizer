<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/row_transaction_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:id="@+id/transaction_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:text="date"
            android:gravity="center_vertical|center_horizontal"
            android:textSize="13dp"
            android:textStyle="bold"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:background="#D8D8D8"/>
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/row_transaction_amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/row_transaction_date"
        >

        <TextView
            android:id="@+id/transaction_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:gravity="center_vertical"
            android:text="Amount"
            android:textSize="12dp"
            android:textStyle="normal"
            android:paddingTop="5dp"
            android:layout_marginRight="15dp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/row_transaction_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/row_transaction_amount">
        <!--TextView
            android:id="@+id/transaction_type"
            android:text="Type"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textSize="13dp"
            android:paddingTop="3dp"
            android:paddingBottom="5dp"
            android:layout_marginRight="10dp"/-->

        <ImageView
            android:id="@+id/transaction_attachment"
            android:gravity="center_vertical"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_alignParentRight="true"
            android:paddingTop="3dp"
            android:paddingBottom="5dp"
            android:layout_marginRight="15dp"
            android:src="@drawable/ic_menu_attach" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/row_transaction_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/row_transaction_date">
        <TextView
            android:id="@+id/transaction_account"
            android:text="Description"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13dp"
            android:textStyle="bold"
            android:paddingTop="5dp"
            android:layout_marginLeft="15dp"/>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/row_transaction_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/row_transaction_account">
        <TextView
            android:id="@+id/transaction_category"
            android:text="Category"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13dp"
            android:textStyle="italic"
            android:paddingTop="3dp"
            android:paddingBottom="5dp"
            android:layout_marginLeft="15dp"/>



    </RelativeLayout>


</RelativeLayout>